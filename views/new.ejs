<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog Post
    </div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label for="blog[image]">Image URL</label>
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label for="blog[body]">Blog Post</label>
            <textarea name="blog[body]" placeholder="What's on your mind?"></textarea>
        </div>
        <input class="ui blue fluid inverted button" type="submit">
    </form>
</div>

<% include ./partials/footer %>